<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="InventorySystems.LoginPage">

    <StackLayout Padding="30">
        <Label Text="Login" FontSize="30" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Username" Completed="OnLoginEntryCompleted" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" Completed="OnLoginEntryCompleted" />

        <Button Text="Login" Clicked="OnLoginClicked"
                BackgroundColor="Blue" TextColor="White" />
    </StackLayout>
</ContentPage>
